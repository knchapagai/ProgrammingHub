//Binary operator overloading

#include<iostream>
using namespace std; // Adding Library
class bioverload{ // Making class
	public:
		int a,b,d; // data 
		bioverload(int x,int y) // Parameterized Constructor
		{
			a=x; // Assigning Values
			b=y;
			
		}
		
		bioverload() // Non Parameterized Constructor
		{
			
		}
		
		bioverload operator +(bioverload c) 		{ 
			bioverload b3; // Creating Object
			b3.a=a+c.a; //10+20=30
			b3.b=b+c.b;	//20+30=50
			return b3; // returnig object
//			
			
		}
};

int main(){
	bioverload b1(10,20); // Passing value to the fnx
	bioverload b2(20,30);
	bioverload b3; 
	b3=b1+b2;
//	cout<<"Value of b3.a :"<<b3.a<<endl;
//	cout<<"Value of b3.b :"<<b3.b<<endl;
cout<<"Total sum of (b1.a+b2.a)+(b1.b+b2.b) is "<<b3.a+b3.b;

	return 0;
}
